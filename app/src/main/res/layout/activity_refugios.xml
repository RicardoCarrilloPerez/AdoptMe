<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoperros"
    tools:context=".refugios">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondoperros"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/poppinsblack"
            android:text="REFUGIOS"
            android:textSize="34sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tarjetas de refugios -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_r1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_r1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="Imagen del refugio"
                            android:scaleType="centerCrop"
                            android:src="@drawable/refugio1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nombre_r1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Patitas"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/loc_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Edomex"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/telf_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="56 4208 7789"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_r2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_r2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="Imagen del refugio"
                            android:scaleType="centerCrop"
                            android:src="@drawable/refugio2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nombre_r2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nueva vida"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/loc_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tijuana"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/telf_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(664) 635-1655"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_r3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_r3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="Imagen del refugio"
                            android:scaleType="centerCrop"
                            android:src="@drawable/refugio3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nombre_r3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Animalistas Unidos A.C."
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/loc_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CDMX"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/telef_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(55) 5241-2956"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView_r4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image_r4"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="Imagen del refugio"
                            android:scaleType="centerCrop"
                            android:src="@drawable/refugio4" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/nombre_r4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ángeles de Patas"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/loc_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CMDX"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/telef_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="(55) 2793-5693"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btninfo_refug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#1d2269"
            android:enabled="false"
            android:text="INFORMACION"
            android:textColor="@color/white" />
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
